<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/top_gui_layout"
    tools:context=".UnoMainActivity">

    <TextView
        android:id="@+id/turn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="TURN: "
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="31dp" />

    <Button
        android:id="@+id/unoButton"
        android:layout_width="450dp"
        android:layout_height="62dp"
        android:layout_marginEnd="8dp"
        android:text="UNO"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="563dp" />

    <com.example.marcinko21.uno.UnoSurfaceView
        android:id="@+id/unoSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="444dp"
        android:layout_marginStart="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="123dp" />

    <Spinner
        android:id="@+id/menuSpinner"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/drawButton"
        android:layout_width="450dp"
        android:layout_height="62dp"
        android:layout_marginEnd="92dp"
        android:text="DRAW"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/unoButton"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="563dp" />

    <TextView
        android:id="@+id/computerHand"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="COMPUTER'S HAND"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="81dp" />

</android.support.constraint.ConstraintLayout>